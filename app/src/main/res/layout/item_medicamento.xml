<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/medicamento_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Medicamento X"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/medicamento_aplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="PrÃ³xima dosis:"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicamento_nombre" />

        <TextView
            android:id="@+id/aplicacion_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="4:00pm"
            android:textColor="@color/azul_oscuro"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/medicamento_aplicacion"
            app:layout_constraintTop_toBottomOf="@id/medicamento_nombre" />

        <TextView
            android:id="@+id/medicamento_intervalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Intervalo:"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/medicamento_aplicacion" />

        <TextView
            android:id="@+id/intervalo_hrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="8 hrs"
            android:textColor="@color/azul_oscuro"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/medicamento_intervalo"
            app:layout_constraintTop_toBottomOf="@id/aplicacion_horario" />

        <TextView
            android:id="@+id/medicamento_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Cantidad:"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/intervalo_hrs"
            app:layout_constraintTop_toBottomOf="@id/medicamento_aplicacion" />

        <TextView
            android:id="@+id/cantidad_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2 capsulas"
            android:textColor="@color/azul_oscuro"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/medicamento_cantidad"
            app:layout_constraintTop_toBottomOf="@id/aplicacion_horario" />

        <ImageView
            android:id="@+id/item_receta_imagen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icono_med2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/medicamento_nombre" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>