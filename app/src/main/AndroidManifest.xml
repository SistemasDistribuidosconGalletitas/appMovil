<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appssm">

    <!--Este es el permiso para saber si el usuario tiene acceso a internet-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!--Este es el permiso para tener acceso a internet-->
    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appssm">
        <activity android:name=".MedicamentosActivity"></activity>
        <activity android:name=".RecetasActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".notificacion.AlertReceiver"></receiver>
    </application>

</manifest>